@model Cooperchip.ITDeveloper.Domain.Models.EstadoPaciente

@{
    ViewData["Title"] = "Edit";
}

    <vc:cabecalho titulo="Medical Management - Sys / Módulo Estado dos Pacientes"
                  subtitulo="Módulo de Administração do Paciente"></vc:cabecalho>

<div class="panel panel-info panel-controls">
    <div class="panel panel-heading">
        <h3>Editar de Estados de Paciente</h3>
    </div>

    <div class="panel panel-body">
        <div class="col-md-4">
            <form asp-controller="EstadoPaciente" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a asp-controller="EstadoPaciente" asp-action="Index" class="btn btn-info">Voltar à lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
